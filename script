local shell = require "shell"
local default_repo = "https://gitee.com/sh0aky/assembly-line/raw"

local args, _ = shell.parse(...)
local repo;
if type(args) == "table" then
    repo = args[1] or default_repo
else
    repo = default_repo
end

shell.execute("rm -rf ./assembly-line")
shell.execute("mkdir assembly-line")
local pwd = shell.getWorkingDirectory()
local dir = pwd .. "/assembly-line"
shell.setWorkingDirectory(dir)
local prefix = "wget " .. repo
shell.execute(prefix .. "/master/src/main.lua")
shell.execute(prefix .. "/master/src/manager.lua")
shell.execute(prefix .. "/master/src/check-config.lua")

shell.execute("mkdir chest conf recipe tools")
shell.execute("wget " .. repo .. "/master/src/chest/reader.lua " .. dir .. "/chest/reader.lua")
shell.execute("wget " .. repo .. "/master/src/conf/config.lua "  .. dir .. "/conf/config.lua")
shell.execute("wget " .. repo .. "/master/src/recipe/matcher.lua "   .. dir .. "/recipe/matcher.lua")
shell.execute("wget " .. repo .. "/master/src/recipe/Progress.lua "   .. dir .. "/recipe/Progress.lua")
shell.execute("wget " .. repo .. "/master/src/recipe/recipes.lua "  .. dir .. "/recipe/recipes.lua")
shell.execute("wget " .. repo .. "/master/src/recipe/transport.lua "  .. dir .. "/recipe/transport.lua")
shell.execute("wget " .. repo .. "/master/src/tools/db.lua "  .. dir .. "/tools/db.lua")
shell.execute("wget " .. repo .. "/master/src/tools/readlabel.lua "  .. dir .. "/tools/readlabel.lua")

print("installed successfully! plz read https://github.com/shoaky009/assembly-line/blob/master/README.md, and edit conf/config.lua make it work")
